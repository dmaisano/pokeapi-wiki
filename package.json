{
  "name": "dmaisano-react-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.17",
    "@types/node": "12.7.1",
    "@types/react": "16.8.25",
    "@types/react-dom": "16.8.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "typescript": "3.5.3"
  },
  "scripts": {
    "build:css": "postcss tailwind.theme.css -o src/tailwind.css",
    "watch:css": "postcss tailwind.theme.css -o src/tailwind.css -w",
    "start": "concurrently --kill-others \"npm run watch:css\" \"react-scripts start\"",
    "build": "concurrently --kill-others \"npm run build:css\" \"react-scripts build\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "concurrently": "^4.1.1",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.1.0"
  }
}
